#!/bin/sh

warning_default() {
  cat >/dev/console <<EOF
 ____  _____ _____ _   _   _ _   _____   _        _    _   _ 
|  _ \| ____|  ___/ \ | | | | | |_   _| | |      / \  | \ | |
| | | |  _| | |_ / _ \| | | | |   | |   | |     / _ \ |  \| |
| |_| | |___|  _/ ___ \ |_| | |___| |   | |___ / ___ \| |\  |
|____/|_____|_|/_/   \_\___/|_____|_|   |_____/_/   \_\_| \_|
                                                             
 __  __    _    ____      _    ____  ____  ____  _____ ____ ____  
|  \/  |  / \  / ___|    / \  |  _ \|  _ \|  _ \| ____/ ___/ ___| 
| |\/| | / _ \| |       / _ \ | | | | | | | |_) |  _| \___ \___ \ 
| |  | |/ ___ \ |___   / ___ \| |_| | |_| |  _ <| |___ ___) |__) |
|_|  |_/_/   \_\____| /_/   \_\____/|____/|_| \_\_____|____/____/ 
                                                                  
 ____  _____ _____ _____ ____ _____ _____ ____  
|  _ \| ____|_   _| ____/ ___|_   _| ____|  _ \ 
| | | |  _|   | | |  _|| |     | | |  _| | | | |
| |_| | |___  | | | |__| |___  | | | |___| |_| |
|____/|_____| |_| |_____\____| |_| |_____|____/ 
EOF

  echo "Please change lanmac address using pzinfo command." >/dev/console
}

which pzinfo >/dev/null || warning_default
[ "$(pzinfo lanmac)" = "00:0C:C3:00:00:00" ] && warning_default
